# Database
DB_URI=mongodb://localhost:27017/nexicart

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d

# Node Environment
NODE_ENV=development

# Server Port
PORT=5000

# Frontend URLs
FRONTEND_URL_PROD=https://nexi-cart.vercel.app

# Razorpay Configuration (UPI Payment Gateway)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# UPI Configuration
UPI_MERCHANT_ID=merchant@upi

# Stripe Configuration (if still needed)
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# PayPal Configuration (if still needed)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
